#!/sbin/busybox sh
PATH="/sbin"
WAIT=2
busybox echo "WAIT $WAIT second before boot debian"
busybox sleep $WAIT
busybox echo "boot debian..."

busybox mount -t proc none /proc
busybox mount -t sysfs none /sys
busybox mount -t tmpfs none /dev
busybox sleep 1

# hot plug
busybox mdev -s

#umount /proc
#umount /sys
#umount /dev

# Single user mode
exec busybox getty -n -l /sbin/sh 115200 /dev/ttyMT0 linux